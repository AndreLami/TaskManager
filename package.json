{
  "name": "tasks",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:tasks:dev": "APP_ENV=dev nest start tasks --watch",
    "start:tasks:debug": "APP_ENV=dev nest start tasks --debug --watch",
    "start:tasks:stage": "APP_ENV=stage node dist/apps/tasks/main",
    "start:tasks:prod": "APP_ENV=prod node dist/apps/tasks/main",
    "start:notifier:dev": "APP_ENV=dev nest start notifier --watch",
    "start:notifier:debug": "APP_ENV=dev nest start notifier --debug --watch",
    "start:notifier:stage": "APP_ENV=stage node dist/apps/notifier/main",
    "start:notifier:prod": "APP_ENV=prod node dist/apps/notifier/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/tasks/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/platform-socket.io": "^8.4.7",
    "@nestjs/platform-ws": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjs/websockets": "^8.4.7",
    "@types/elasticsearch": "^5.0.40",
    "@types/redis": "^4.0.11",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.5.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "elasticsearch": "^16.7.3",
    "ioredis": "^5.2.3",
    "mysql": "^2.18.1",
    "redis": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger": "^0.7.5",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.7",
    "winston": "^3.8.2",
    "winston-elasticsearch": "^0.17.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/node": "^16.18.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.0.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
